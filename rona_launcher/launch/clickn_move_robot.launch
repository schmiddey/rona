<?xml version="1.0"?>
<launch>
  <arg name="map_frame"                default="map"    />
  <arg name="robot_frame"              default="base_footprint_f" />
  <arg name="robot_radius"             default="0.25"   />
  <arg name="dt_radius"                default="0.4"    />
  <arg name="free_robot_pos_factor"    default="0.5"    />
  <arg name="map_scale"                default="2"      />
  <arg name="continuous_map_operation" default="true"   />

  <!-- Path controller -->
  <!--node name="rona_move_node" pkg="rona_move" type="rona_move_node" output="screen"-->
  <node name="rona_move_node" pkg="rona_move" type="rona_move_node" output="log">
    <param name="pub_cmd_vel_topic"        type="string" value="/cmd_vel/rona"           />
    <param name="pub_state_topic"          type="string" value="rona/move/state"   />
    <param name="pub_process_topic"        type="string" value="rona/move/process" />
    <param name="sub_path_topic"           type="string" value="rona/plan/path"    />
    <param name="sub_ctrl_topic"           type="string" value="rona/move/ctrl"    />
    <param name="map_frame"                type="string" value="$(arg map_frame)"               />
    <param name="robot_frame"              type="string" value="$(arg robot_frame)"    />
    <param name="kinematic"                type="string" value="differential"    />
    <param name="loop_rate"                type="double" value="50.0"               />
    <param name="vel_lin_max"              type="double" value="0.4"               />
    <param name="vel_ang_max"              type="double" value="0.5"               />
    <param name="target_radius"            type="double" value="0.18"              />
    <param name="target_radius_final"      type="double" value="0.15"               />
    <param name="ang_reached_range"        type="double" value="0.15"               />  <!--todo try less -->
    <param name="lin_end_approach"         type="double" value="1"               />
    <param name="lin_ctrl_scale"           type="double" value="1.0"               />
    <param name="ang_ctrl_scale"           type="double" value="1.5"               />
    <!-- <param name="lin_slope"                type="double" value="0.4"               /> -->
    <!-- <param name="ang_slope"                type="double" value="0.9"               /> -->
    <param name="min_vel_value"            type="double" value="0.001"             />
    <!-- <param name= "hold_pos"                type="bool"   value="true"              /> -->
    <!-- <param name= "wait_for_rotation"       type="double" value="0.10"              /> -->
    <param name="max_lin_acc"              type="double"  value="10.5" />
    <param name="max_ang_acc"              type="double"  value="10.5" />
  </node>



  <node name="rona_plan_node" pkg="rona_plan" type="rona_plan_node" output="screen">
    <param name="map_frame"                  type="string" value="$(arg map_frame)"                  />
    <param name="robot_frame"                type="string" value="$(arg robot_frame)"                />
    <param name="robot_radius"               type="double" value="$(arg robot_radius)"               />
    <param name="dt_radius"                  type="double" value="$(arg dt_radius)"                  />
    <param name="free_robot_pos_factor"      type="double" value="$(arg free_robot_pos_factor)"      />
    <param name="map_scale"                  type="double" value="$(arg map_scale)"                  />
    <param name="continuous_map_operation"   type="bool"   value="$(arg continuous_map_operation)"   />

    <remap from="rona/plan/target" to="/move_base_simple/goal"/>
  </node>

</launch>
